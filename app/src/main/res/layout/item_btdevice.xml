<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/invitation_border_shadow"
    android:elevation="4dp">

    <TextView
        android:id="@+id/bt_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="小度人工智能音箱行业版"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_avator"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/bt_device_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"

        android:background="@drawable/xiaodu_hotel"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/bt_start_config"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/iv_avator"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/ripple_bg"
        android:text="开始配置"
        android:textColor="@android:color/white" />


</RelativeLayout>